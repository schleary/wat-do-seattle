<div class="main-block">
  <h1>My Events</h1>
</div>

<div class="main-block">
<% if @events != nil %>
  <% @events.each do |event| %>
    <%= link_to event_show_path(event.id) do %>
      <%= event.activity.name %>
      <img src="<%= event.activity.image_url %>" height="125px">
      Created by <%= event.user.name %><br>
      Time: <%= event.date_time_start %> -
      <%= event.date_time_end %>
      <%= event.activity.description %>
      <hr>
    <% end %>
  <% end %>
  <hr>
<% end %>
</div>
