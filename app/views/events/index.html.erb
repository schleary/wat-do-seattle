<div class="main-block">
  <h1>My Events</h1>
</div>


<% if @events.any? %>
  <% @events.each do |event| %>
    <div class="row">
      <div class="col-lg-2 col-md-2 col-sm-3 col-xs-4 ">
        <img class="sub-images" src="<%= event.activity.image %>">
      </div>
      <div class="col-lg-10 col-md-10 col-sm-9 col-xs-8">
        <div class="main-block">
          <%= link_to event_show_path(event.id) do %>
            <b>Event: </b><%= event.activity.name %><br>
            <b>Created by: </b><%= event.user.name %><br>
            <b>Date: </b><%= event.date_time_start.strftime("%b. %e") %> -
            <%= event.date_time_end.strftime("%b. %e, %Y")%><br>
            <b>Time: </b><%= event.date_time_start.strftime("%I:%M %P") %> -
            <%= event.date_time_end.strftime("%I:%M %P")%><br>
            <b>Description: </b><%= event.activity.description %>
          <% end %>
        </div>
      </div>
    </div>
    <hr>
  <% end %>
<% else %>
  <div class="main-block">
    You have no events to show
  </div>
<% end %>
