<div class="main-block">
  <h1>Wat Do? [Seattle] Users </h1>
</div>

<div class="main-block">
  <% @users.each do |user| %>
    <%= user.name %>

    <% count = 0 %>
    <% @friendship.each do |friendship| %>
      <% if (friendship.user.id == current_user.id && friendship.friend_id == user.id) %>
        (<%= link_to "Remove Friend", friendship_destroy_path(friendship) %>)
        <% count += 1 %>
      <% else %>
      <% end %>
    <% end %>

    <% if (count == 0) %>
      (<%= link_to "Add Friend", friendship_create_path(:friend_id => user), :method => :post %>)
    <% end %><br>
    <hr>

  <% end %>
</div>
